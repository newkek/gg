#!/usr/bin/env node

'use strict';

process.bin = process.title = 'gg';

var gg = require('../lib/gg.js');
var cli = require('cli');

cli.parse(null, ['i', 'init', 'initialize', 'cl', 'clone', 'a', 'aa', 'add', 'c', 'commit', 'p', 'push', 'pl', 'pull', 'f', 'fetch', 'fa', 's', 'status', 'l', 'log']);

switch (cli.command) {
	// Initialize.
	case 'i':
	case 'init':
	case 'initialize':
		gg.init();
		break;

	case 'cl':
	case 'clone':
		var repository = cli.args[0];
		gg.clone(repository);
		break;

	// Add.
	case 'a':
	case 'add':
		if (cli.args[1] !== undefined) {
			var options = cli.args[0];
			var target = cli.args[1];
			gg.addOptions(options, target);
		} else {
			var target = cli.args[0];
			gg.addSingle(target);
		}
		break;

	case 'aa': // Short for 'add all'.
		gg.addAll();
		break;

	// Commit.
	case 'c':
	case 'ci':
	case 'commit':
		var message = cli.args.join(' ');
		gg.commit(message);
		break;

	// Push.
	case 'p':
	case 'push':
		gg.push();
		break;

	// Pull.
	case 'pl':
	case 'pull':
		gg.pull();
		break;

	// Fetch.
	case 'f':
	case 'fetch':
		gg.fetch();
		break;

	case 'fa': // Short for 'fetch --all'.
		gg.fetchAll();
		break;

	// Status.
	case 's':
	case 'status':
		gg.status();
		break;

	// Log.
	case 'l':
	case 'log':
		gg.log();
		break;
}
