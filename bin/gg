#!/usr/bin/env node
'use strict';

process.bin = process.title = 'gg';

var gg = require('../lib/gg.js');
var cli = require('cli');

cli.parse(null, ['i', 'init', 'a', 'aa', 'add', 'c', 'commit', 'p', 'push', 's', 'status', 'l', 'log', 'ch', 'checkout']);

switch (cli.command) {
	// Initialize.
	case 'i':
	case 'init':
		gg.init();
		break;

	// Add.
	case 'a':
	case 'aa': // Short for 'add all'.
	case 'add':
		gg.addAll();
		break;

	// Commit.
	case 'c':
	case 'commit':
		var message = cli.args.join(' ');
		gg.commit(message);
		break;

	// Push.
	case 'p':
	case 'push':
		gg.push();
		break;

	// Pull.
	case 'pl':
	case 'pull':
		gg.pull();
		break;

	// Status.
	case 's':
	case 'status':
		gg.status();
		break;

	// Log.
	case 'l':
	case 'log':
		gg.log();
		break;
}
