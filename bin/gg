#!/usr/bin/env node
'use strict';

process.bin = process.title = 'gg';

var gg = require('../lib/gg.js');
var cli = require('cli');
var git = require('nodegit');

cli.parse(null, ['i', 'aa', 'c', 'p', 's', 'l']);

switch (cli.command) {
	// Initialize.
	case 'i':
		gg.init();
		break;

	// Add all.
	case 'aa':
		gg.addAll();
		break;

	// Commit.
	case 'c':
		var message = cli.args.join(' ');
		gg.commit(message);
		break;

	// Push.
	case 'p':
		gg.push();
		break;

	// Status.
	case 's':
		gg.status();
		break;

	case 'l':
		gg.log();
		break;
}
