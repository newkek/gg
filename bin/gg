#!/usr/bin/env node
'use strict';

process.bin = process.title = 'gg';

var gg = require('../lib/gg.js');
var cli = require('cli');
var git = require('nodegit');

cli.parse(null, ['aa', 'c', 'cl', 'remove', 'uninstall', 'ls']);

switch (cli.command) {
	// Add all
	case 'aa':
		gg.addAll();
		break;

	// Commit.
	case 'c':
		var message = cli.args.join(' ');
		gg.commit(message);
		break;
}

